# Use the official Node.js image.
FROM node:14

# Set the working directory.
WORKDIR /usr/src/app

# Copy package.json and install dependencies.
COPY package*.json ./
RUN npm install

# Copy the rest of your code.
COPY . .

# Expose the port your app runs on.
EXPOSE 2000

# Command to run the app.
CMD ["node", "server.js"]
